#----------------------------------------------------------------
# Example .env file for application configuration
# Fill in the values according to your setup
#----------------------------------------------------------------
# Created by: <Your Name>
# License: MIT
#----------------------------------------------------------------

# ------------------------
# Core App Config
# ------------------------
AUTHOR=                     # Application author/maintainer
BACKEND_URL=                # Base URL of the backend server (e.g., http://localhost:3000)
BACKEND_API_URL=            # API base URL (e.g., ${BACKEND_URL}/api/v1)
FRONTEND_URL=               # Base URL of the frontend (e.g., http://localhost:5173)

# ------------------------
# App Environment
# ------------------------
NODE_ENV=                   # Environment (development, production, test)
PORT=                       # Port on which the backend runs

# ------------------------
# Database Config
# ------------------------
DB_HOST=                    # Database host
DB_PORT=                    # Database port
DB_USERNAME=                # Database username
DB_PASSWORD=                # Database password
DB_NAME=                    # Database name

POSTGRES_USER=              # PostgreSQL root user
POSTGRES_PASSWORD=          # PostgreSQL root password
POSTGRES_DB=                # Default PostgreSQL database

# ------------------------
# Redis Config
# ------------------------
REDIS_HOST=                 # Redis host
REDIS_PORT=                 # Redis port

# ------------------------
# Email Service Config
# ------------------------
MAIL_USER=                  # Email account (e.g., Gmail)
MAIL_PASS=                  # Email service password or App Password
MAIL_HOST=                  # Mail server host (e.g., smtp.gmail.com)
MAIL_PORT=                  # Mail server port (e.g., 587 for TLS)
MAIL_SECURE=                # Whether to use secure connection (true/false)

# ------------------------
# Authentication Config
# ------------------------

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=     # Google OAuth client ID
GOOGLE_OAUTH_CLIENT_SECRET= # Google OAuth client secret
GOOGLE_OAUTH_CALLBACK_URL=  # Google OAuth callback URL (e.g., ${BACKEND_API_URL}/authentication/oauth/google/callback)

# GitHub OAuth
GITHUB_OAUTH_CLIENT_ID=     # GitHub OAuth client ID
GITHUB_OAUTH_CLIENT_SECRET= # GitHub OAuth client secret
GITHUB_OAUTH_CALLBACK_URL=  # GitHub OAuth callback URL (e.g., ${BACKEND_API_URL}/authentication/oauth/github/callback)

# ------------------------
# JWT Config
# ------------------------
JWT_ACCESS_TOKEN_SECRET=    # Secret key for signing access tokens
JWT_REFRESH_TOKEN_SECRET=   # Secret key for signing refresh tokens
JWT_ACCESS_TOKEN_EXPIRES_IN= # Expiration time for access tokens (e.g., 15m, 1h)
JWT_REFRESH_TOKEN_EXPIRES_IN= # Expiration time for refresh tokens (e.g., 7d)

# ------------------------
# Cloudinary Config
# ------------------------
CLOUDINARY_CLOUD_NAME=      # Cloudinary cloud name
CLOUDINARY_API_KEY=         # Cloudinary API key
CLOUDINARY_API_SECRET=      # Cloudinary API secret

